@using VersOne.Epub
@{
    ViewData["Title"] = "Browse Page";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-image: url('https://images5.alphacoders.com/919/919004.jpg');
        background-attachment: fixed;
        background-size: cover;
    }

    section {
        display: -webkit-flex;
        display: flex;
        padding: 30px;
    }

    img {
        width: 200px;
        height: 300px;
    }

    footer {
        background-color: #fff;
        text-align: center;
        color: white;
    }
    img.pointer:hover{
        cursor:pointer;
    }

    row {
        display: block;
    }
    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
        }
</style>

@model string[]
<body>
    <section>
        <div class="row">
            @for (int i = 0; i < Model.Length; i++)
            {
                <img class="pointer shadow-lg mb-5 rounded" style="margin:5px;" src="@Model[i]" onclick="@("window.location.href='" + @Url.Action("Book", "Home") + "'");" />
            }

        </div>
    </section>
        <script>
        document.addEventListener('DOMContentLoaded', function(){
            var footer = document.getElementsByTagName("footer");
            footer[0].style.display = "none";
        })
    </script>

</body>