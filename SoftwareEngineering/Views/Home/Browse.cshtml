@using VersOne.Epub
@{
    ViewData["Title"] = "Browse Page";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-image: url('https://images5.alphacoders.com/919/919004.jpg');
        background-attachment: fixed;
        background-size: cover;
    }

    section {
        display: -webkit-flex;
        display: flex;
        padding: 30px;
    }

    img {
        max-width: 300px;
        max-height: 300px;
        width: auto;
        height: auto;
        padding: 10px;
    }

    footer {
        background-color: #fff;
        text-align: center;
        color: white;
    }

    row {
        display: block;
    }
</style>

@model string[]
<body>
    <section>
        <div class="row">
            @for (int i = 0; i < Model.Length; i++)
            {
                <img src="@Model[i]" onclick="@("window.location.href='" + @Url.Action("Book", "Home") + "'");" />
            }

        </div>
    </section>

</body>